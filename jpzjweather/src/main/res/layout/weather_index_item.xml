<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    cardView:cardBackgroundColor="@color/index_background_item_card"
    cardView:cardCornerRadius="0dp"
    cardView:cardElevation="0dp"
    cardView:cardPreventCornerOverlap="true"
    cardView:cardMaxElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/id_index_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/hello_world"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/id_index_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="热"
                android:textColor="@color/text_color_while" />

            <TextView
                android:id="@+id/id_index_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_index_value"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="穿衣"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/abc_text_size_caption_material" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>