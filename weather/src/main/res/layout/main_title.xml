<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_translucent">

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:id="@+id/id_icon_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textColor="@color/text_color_while"
        android:textSize="@dimen/title_btn_icon_size"
        fontawesometext:fa_icon="fa-home" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/id_text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/main_title_city_name"
            android:textColor="@color/text_color_while"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/id_text_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_text_city"
            android:layout_centerHorizontal="true"
            android:text="@string/main_title_current_time"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/abc_text_size_small_material" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator_default"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/id_text_current_time"
            android:layout_centerHorizontal="true"
            app:ci_height="5dp"
            app:ci_width="5dp" />

    </RelativeLayout>

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:id="@+id/id_icon_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textColor="@color/text_color_while"
        android:textSize="@dimen/title_btn_icon_size"
        fontawesometext:fa_icon="fa-share-alt" />

</RelativeLayout>